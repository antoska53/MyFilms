<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="name">
        <item name="android:textSize"> 40sp  </item>

        <item name="android:letterSpacing"> -0.01</item>

        <item name="android:textColor">@color/white_text</item>

        <item name="android:shadowColor">@color/shadow_text</item>

        <item name="android:shadowDx">0</item>

        <item name="android:shadowDy">6</item>

        <item name="android:shadowRadius">12</item>
    </style>

    <style name="movieGenre">
        <item name="android:textSize">14sp</item>

        <item name="android:textColor">@color/pink_text</item>
    </style>

    <style name="description">
        <item name="android:textSize">14sp</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="storyline">
        <item name="android:textSize">14sp</item>

        <item name="android:textColor">@color/white_text</item>

        <item name="android:shadowColor">@color/shadow_text</item>

        <item name="android:shadowDx">0</item>

        <item name="android:shadowDy">6</item>

        <item name="android:shadowRadius">12</item>
    </style>

    <style name="review">
        <item name="android:textSize">14sp</item>

        <item name="android:textColor">@color/grey_text</item>
    </style>

    <style name="cast">
        <item name="android:textSize">14sp</item>

        <item name="android:letterSpacing">-0.01</item>

        <item name="android:textColor">@color/white_text</item>

        <item name="android:shadowColor">@color/shadow_text</item>

        <item name="android:shadowDx">0</item>

        <item name="android:shadowDy">6</item>

        <item name="android:shadowRadius">12</item>
    </style>

    <style name="cast_name">
        <item name="android:textSize">12sp</item>

        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="back">
        <item name="android:textSize">12sp</item>

        <item name="android:textColor">@color/grey_text</item>
    </style>

    <style name="rectangle_text">
        <item name="android:textSize">12sp</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyStyleRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_text</item>
        <item name="colorControlActivated">@color/pink_text</item>
    </style>
</resources>